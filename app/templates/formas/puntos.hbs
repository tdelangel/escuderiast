  <div class="container contenido">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-lg-6">
         
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-6">
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-lg-4">
                    <div class="form-group">
                         {{input type="text" value=filter class="form-control search-small" placeholder="Buscar ..." }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-lg-4">
                    <button class="btn btn-warning" role="button">
                      <i class="glyphicon glyphicon-plus"></i>  Agregar Nuevo Punto 
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
        <table class="table">
                <thead>
                   
                    <tr class="txt-primary">
                        <th>Número de Punto</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="hide-sm" >Numero de Forma</th>
                        <th class="hide-sm">Ver Imagen</th>
                        <th class="hide-sm">Ver Video</th>
                    
                    </tr>
                </thead>
                <tbody>
       
                 {{#each model as |puntos|}}

                 <tr>
                    <td>{{puntos.id}}</td>
                    <td>{{puntos.nombre}}</td>
                    <td>{{puntos.cat_puntos_desc}}</td>
                    <td>{{puntos.id_forma}}</td>
                    <td class="success hide-sm"> <button type="button" class="btn btn-default settings pull-center edit-row" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon glyphicon-picture"></i> Imagen</button></td>
                    <td class="warning hide-sm"><button type="button" class="btn btn-default settings pull-center edit-row" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon glyphicon-facetime-video"></i> Video</button></td>
                    
                </tr>
               {{else}}
                <tr>
                    <td colspan="6">Sin Puntos de inspección</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
</div>

